    @model IEnumerable<Permaculture_Animal.Models.tblBreed>

@{
    ViewBag.Title = "Index";
}

<h2>List of Breeds</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <p></p>
    @using (Html.BeginForm("Index", "tblBreeds", FormMethod.Get))
    {
    <p>
        Breed: @Html.TextBox("searchString")
        <input type="submit" value="Search" />
    </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BreedName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblSpecy.SpeciesName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BreedName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblSpecy.SpeciesName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BreedID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BreedID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BreedID })
        </td>
    </tr>
}

</table>
